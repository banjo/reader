datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Feed {
  id       Int     @id @default(autoincrement())
  title    String
  link     String
  items    Item[]
}

model Item {
  id       Int     @id @default(autoincrement())
  title    String
  link     String
  feed     Feed    @relation(fields: [feedId], references: [id])
  feedId   Int
}
