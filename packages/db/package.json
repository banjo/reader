{
    "name": "db",
    "version": "1.0.0",
    "license": "MIT",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "nr db:generate:types && tsup",
        "dev": "tsup --watch --clean",
        "clean": "rimraf node_modules dist",
        "db:migrate:dev": "pnpm exec prisma migrate dev && nr db:generate:types",
        "db:migrate:prod": "pnpm exec prisma migrate deploy",
        "db:generate:types": "pnpm exec prisma generate",
        "db:reset": "pnpm exec prisma migrate reset --skip-seed --skip-generate --force && pnpm exec prisma db push && nr db:generate:types && pnpm exec prisma db seed"
    },
    "prisma": {
        "seed": "esno src/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^4.15.0"
    },
    "devDependencies": {
        "@types/node": "^17.0.45",
        "esno": "^0.16.3",
        "prisma": "^4.15.0",
        "rimraf": "^5.0.1",
        "tsup": "^7.1.0",
        "typescript": "^4.5.5"
    }
}
