{
  "name": "next-template",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3002",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "preview": "next build && next start",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "add": "npx shadcn-ui add",
    "db:migrate:dev": "npx prisma migrate dev && nr db:generate:types",
    "db:migrate:prod": "npx prisma migrate deploy",
    "db:local:logs": "docker compose -f docker/docker-compose.yml logs --follow",
    "db:local:run": "docker compose -f ./docker/docker-compose.yml up -d --remove-orphans",
    "db:local:stop": "docker compose -f ./docker/docker-compose.yml down",
    "db:generate:types": "npx prisma generate && esno scripts/updateZodModels.ts && nr format:write",
    "db:update": "npx prisma migrate reset --skip-seed --skip-generate --force && npx prisma db push && nr db:generate:types && npx prisma db seed"
  },
  "prisma": {
    "seed": "esno prisma/seed.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.19.0",
    "@prisma/client": "^4.15.0",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-tooltip": "^1.0.6",
    "class-variance-authority": "^0.4.0",
    "clsx": "^1.2.1",
    "framer-motion": "^10.12.16",
    "ky-universal": "^0.11.0",
    "lucide-react": "0.105.0-alpha.4",
    "next": "^13.4.4",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-select": "^5.7.3",
    "react-select-async-paginate": "^0.7.2",
    "rss-parser": "^3.13.0",
    "server-only": "^0.0.1",
    "sharp": "^0.31.3",
    "swr": "^2.1.5",
    "tailwind-merge": "^1.12.0",
    "tailwindcss-animate": "^1.0.5",
    "tslog": "^4.8.2",
    "type-fest": "^3.11.1",
    "zod": "^3.21.4",
    "zod-prisma": "^0.5.4"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.3",
    "@banjoanton/eslint-config": "^0.1.8",
    "@banjoanton/prettier-config": "^0.1.3",
    "@banjoanton/utils": "^0.1.43",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@types/node": "^17.0.45",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/parser": "^5.59.7",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.41.0",
    "eslint-config-next": "13.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-tailwindcss": "^3.12.0",
    "esno": "^0.16.3",
    "globby": "^13.1.4",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prisma": "^4.15.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5"
  },
  "prettier": "@banjoanton/prettier-config"
}
