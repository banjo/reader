{
  "name": "banjo-rss",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "clean": "pnpm run --parallel clean && rimraf node_modules",
    "build": "pnpm run --filter db build && pnpm run --filter web build",
    "lint": "pnpm run --filter db lint && pnpm run --filter web lint",
    "web:build": "pnpm --filter web build",
    "web:start": "pnpm --filter web start",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "db:build": "pnpm --filter db build",
    "db:local:logs": "docker compose -f docker/docker-compose.yml logs --follow",
    "db:local:run": "docker compose -f docker/docker-compose.yml up -d --remove-orphans",
    "db:local:stop": "docker compose -f docker/docker-compose.yml down",
    "db:reset": "pnpm --filter db db:reset"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@antfu/ni": "^0.21.3",
    "@banjoanton/eslint-config": "^0.1.10",
    "@banjoanton/prettier-config": "^0.1.10",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "esno": "^0.16.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1"
  },
  "prettier": "@banjoanton/prettier-config"
}